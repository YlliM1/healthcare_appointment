    @model healthcare_appointment.Models.Contact

    @section Styles {
        <link href="~/css/EditContactSubmission.css" rel="stylesheet" />
    }

    <h2>Edit Contact Submission</h2>

<div class="form-container">
    <form asp-action="EditContactSubmission" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input type="text" asp-for="FirstName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input type="text" asp-for="LastName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
        </div>

        <!-- Buttons Row -->
        <div class="button-row">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="ContactSubmissions" class="btn btn-secondary">Cancel</a>
            <a href="@Url.Action("ContactSubmissions", "Home")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Submissions
            </a>
        </div>
    </form>
</div>
