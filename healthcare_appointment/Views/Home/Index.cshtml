@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Home Page";
}


<section class="hero" style="background: url('/images/photo2.jpg') no-repeat center center/cover; height: 500px; width: 100vw; margin: 0; padding: 0;">
    <div class="overlay" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0, 0, 0, 0.5);"></div>
    <div class="container text-center text-white position-relative" style="z-index: 1; top: 15%; transform: translateY(-50%);">
        <h1 class="display-4">Welcome to Healthcare Appointment</h1>
        <p class="lead">Your trusted partner in simplifying the healthcare appointment process through state-of-the-art technology.</p>
        <a href="#" class="btn btn-success btn-lg" style="margin-top:20px;background-color:#415941;border:none;padding:10px;">Contact Us</a>
    </div>
</section>
<hr style="width:100vw;height:7px;color:darkgreen; padding:0px;margin:0px;" />
<section class="appointment-section" style="margin: 0; padding: 0;">
    <div class="content" style="display: flex; flex-wrap: wrap; align-items: center; width: 100vw; margin: 0;">
        <div class="image" style="flex: 1; min-width: 50%; height: 500px;">
            <img src="/images/photo3.jpg" alt="User-Friendly Interface" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
        <div class="text" style="flex: 1; padding: 50px; display: flex; justify-content: center; align-items: center;">
            <div style="width: 80%; max-width: 1000px; text-align: center;">
                <h2 style="font-size: 2.5rem; color: #2f4f2f; margin-bottom: 20px;">Book an Appointment</h2>
                <p style="font-size: 1.2rem; line-height: 1.8; color: #333; margin-bottom: 20px;">
                    Easily schedule your appointments with our intuitive platform.
                    Whether you're looking to book a routine check-up,
                    consult a specialist, or arrange follow-up visits, our system streamlines the process, saving you valuable time.
                </p>
                <a href="@((User.Identity.IsAuthenticated) ? "/Home/Appointments" : "/Identity/Account/Login")" class="btn btn-primary" style="background-color:#415941; border:none;padding:10px;">
                    Book Now
                </a>
            </div>
        </div>
    </div>
</section>
<hr style="width:100vw;height:7px;color:darkgreen; padding:0px;margin-top:110px;" />

<section class="third-section">
    <div class="third-container">
        <div class="first-layout">
            <img src="/images/photo4.jpg" alt="First Photo"/>
            <div class="third-text">
            <h1>General Practice</h1>
            <p>Access a network of general practitioners ready to provide you with essential healthcare services and check-ups.</p>
            </div>
        </div>
        <div class="second-layout">
            <div class="third-text">
                <h1>Specialized Care</h1>
                <p>Connect with specialists across various fields, from cardiology to dermatology, for targeted treatment options.</p>
            </div>
            <img src="/images/photo5.jpg" alt="First Photo" />
        </div>
        <div class="first-layout">
            <img src="/images/photo6.jpg" alt="First Photo" />
            <div class="third-text">
                <h1>Preventive Services</h1>
                <p>Schedule routine screenings and preventive care appointments to maintain your health and well-being.</p>
            </div>
        </div>
    </div>
</section>
<hr style="width:100vw;height:7px;color:darkgreen !important; padding:0px;margin:0px;margin-top:110px;" />

