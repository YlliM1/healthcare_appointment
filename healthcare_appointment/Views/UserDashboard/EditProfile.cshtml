@model healthcare_appointment.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Shared layout for consistent design
}

@section Styles {
    <link rel="stylesheet" href="~/css/AdminDashboard.css" />
}

<div class="container">
    <h2>Edit Profile</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger">
            Please correct the errors below and try again.
        </div>
    }

    <form asp-controller="UserDashboard" asp-action="EditProfile" method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UserName" class="form-label">Username</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary" style="background-color: #bfd8bf; border-color: #bfd8bf; color:black;">Save Changes</button>
            <a href="@Url.Action("Index", "UserDashboard")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
