@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null; // Disable layout to manage the full structure here
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <div class="form-container">
        <!-- Form Section -->
        <div class="form-section">
            <h2>Log in</h2>
            <form id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me -->
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Remember me
                    </label>
                </div>

                <!-- Submit Button -->
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>

                <!-- Links -->
                <div class="mt-3">
                    <p>Don't have an account?<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>  
                </div>
            </form>
        </div>

        <!-- Photo Section -->
        <div class="photo-section"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
